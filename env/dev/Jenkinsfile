pipeline {
    agent any

    environment {
        CHAT_TOKEN = credentials('google-chat-guisousa')
        GIT_URL = "https://github.com/gui-sousa/grafana-k8s.git"
        GIT_BRANCH = "dev"
        K8s_TOKEN = "k0s-vanuatu"
        APP_URL = "http://10.1.81.21:32004/"
        NAMESPACE = "staging"
    }

    stages {
        stage('Update Code') {
            steps {
                git branch: "$GIT_BRANCH", url: "$GIT_URL"
            }

            post {
                always {
                   hangoutsNotify message: "‚öôÔ∏è Iniciando build\n‚è∞ Horario de in√≠cio: $BUILD_TIMESTAMP", 
                   token: "$CHAT_TOKEN", 
                   threadByJob: false
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    dockerapp = docker.build("guisousa/grafana-bwg:${env.BUILD_ID}", "-f Dockerfile . --no-cache")
                }
            }
        }

        stage('Docker Push Image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-gsousa') {
                        dockerapp.push('latest')
                        dockerapp.push(env.BUILD_ID)
                    }
                }
            }
        }

        stage('Deploy Kubernetes') {
            steps {
                withKubeConfig([credentialsId: "$K8s_TOKEN"]) {
                    sh 'curl -LO "https://storage.googleapis.com/kubernetes-release/release/v1.20.5/bin/linux/amd64/kubectl"'
                    sh 'chmod +x kubectl'
                    sh 'sed -i "s|\\$NAMESPACE|$NAMESPACE|g" service.yaml'
                    sh 'sed -i "s|\\$NAMESPACE|$NAMESPACE|g" deployment.yaml' 
                    sh './kubectl apply -f service.yaml'
                    sh './kubectl apply -f deployment.yaml'
                }
            }
        }

        stage('Test Grafana login Page') {
            steps {
                httpRequest consoleLogResponseBody: true, 
                responseHandle: 'NONE', 
                url: "$APP_URL", 
                validResponseCodes: '200', 
                validResponseContent: 'Grafana', 
                timeout: 200
            }
        }

        stage('Aprovar Exlus√£o k8s') {
            steps {
                input "Deseja continuar com a exclus√£o da Infraestrutura Kubernetes?"
            }

            post {
                always {
                    hangoutsNotify message: "‚úÖ Deu Certo!\n‚è∞ Tempo de Dura√ß√£o: ${currentBuild.duration / 1000} segundos", token: "$CHAT_TOKEN", threadByJob: false
                }
            }
        }

        stage('Destruindo Infraestrutura üëø') {
            steps {
                withKubeConfig ([credentialsId: 'k0s-vanuatu']) {
                    sh './kubectl delete -f deployment.yaml'
                    sh './kubectl delete -f service.yaml'
                }
            }
        }
    }


    post {
        success {
            hangoutsNotify message: "‚úÖ Deu Certo!\n‚è∞ Tempo de Dura√ß√£o: ${currentBuild.duration / 1000} segundos", 
            token: "$CHAT_TOKEN", 
            threadByJob: false
        }

        failure {
           hangoutsNotify message: "‚ùå Deu Errado!\n‚è∞ Tempo de Dura√ß√£o: ${currentBuild.duration / 1000} segundos", 
           token: "$CHAT_TOKEN", 
           threadByJob: false 
        }
    }
}
